<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTodoActivity">

    <EditText
        android:id="@+id/new_task_title_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ADD TASK HERE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/new_task_description_ET"
        android:hint="ADD DESCRIPTION HERE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_task_title_ET" />


    <Button
        android:id="@+id/add_new_task_btn"
        android:layout_marginTop="24dp"
        android:text="ADD TASK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_task_description_ET"/>

    <Button
        android:id="@+id/go_back_to_list"
        android:layout_marginTop="24dp"
        android:text="GO BACK TO LIST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_new_task_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>